<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lz_dialog_background"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/tv_title_ip_dialog"
        android:gravity="center"
        android:text="@string/setting_ip"
        android:textColor="@color/lz_text"
        android:textSize="32sp" />

    <View style="@style/Test_data_view"
        android:layout_below="@id/tv_title_ip_dialog"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="200dp">
        <EditText
            android:layout_width="match_parent"
            android:hint="192.168.1.100"
            android:id="@+id/et_ip_address"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:hint="8888"
            android:id="@+id/et_port_address"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View style="@style/Test_data_view" />

    <Button
        android:id="@+id/btn_connect_tcp"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/sure" />


</RelativeLayout>