<?xml version="1.0" encoding="utf-8"?>

<com.lz.base.view.LzScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_status_jk"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="状态"
                android:scaleType="centerInside"
                android:src="@mipmap/status_normal" />

            <TextView
                android:id="@+id/tv_title_jk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <View style="@style/Test_data_view" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="在线监测数据显示"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="28sp" />

        <View style="@style/Test_data_view" />

        <LinearLayout style="@style/Test_data_parent">

            <TextView
                style="@style/Test_Data"
                android:text="@string/tv_0082_jk" />

            <TextView
                android:id="@+id/tv_0082_value_jk"
                style="@style/Test_Data_Value" />

        </LinearLayout>

        <View style="@style/Test_data_view_content" />

        <LinearLayout style="@style/Test_data_parent">

            <TextView
                style="@style/Test_Data"
                android:text="@string/tv_0083_jk" />

            <TextView
                android:id="@+id/tv_0083_value_jk"
                style="@style/Test_Data_Value" />

        </LinearLayout>

        <View style="@style/Test_data_view" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="测试信息"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="28sp" />

        <View style="@style/Test_data_view" />

        <LinearLayout style="@style/Test_data_parent">

            <TextView
                style="@style/Test_Data"
                android:text="@string/tv_0084_jk" />

            <TextView
                android:id="@+id/tv_0084_value_jk"
                style="@style/Test_Data_Value" />

        </LinearLayout>

        <View style="@style/Test_data_view_content" />

        <LinearLayout style="@style/Test_data_parent">


            <TextView
                style="@style/Test_Data"
                android:text="@string/tv_0085_jk" />

            <TextView
                android:id="@+id/tv_0085_value_jk"
                style="@style/Test_Data_Value" />

        </LinearLayout>

        <View style="@style/Test_data_view_content" />


        <LinearLayout style="@style/Test_data_parent">


            <TextView
                android:id="@+id/tv_0086_jk"
                style="@style/Test_Data"
                android:text="@string/tv_0086_jk" />

            <TextView
                android:id="@+id/tv_0086_value_jk"
                style="@style/Test_Data_Value" />

        </LinearLayout>

        <View style="@style/Test_data_view_content" />

        <LinearLayout style="@style/Test_data_parent">

            <TextView
                style="@style/Test_Data"
                android:text="@string/tv_0087_jk" />

            <TextView
                android:id="@+id/tv_0087_value_jk"
                style="@style/Test_Data_Value" />

        </LinearLayout>

        <View style="@style/Test_data_view" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent" />

    </LinearLayout>

</com.lz.base.view.LzScrollView>
